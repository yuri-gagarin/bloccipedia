
<%= form_for @wiki, url: wiki_path(@wiki), method: :patch, :html => {:class => "form-horizontal center"} do |f| %>
<% if @wiki.errors.any? %>
  <%= show_error_messages(f.object) %>
<% end %>
    <div class="container">
      <div class="form-group row">
        <%= f.label :title, "Title", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :body, "Body", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_area :body, rows: 40, class: "form-control" %>
        </div>
      </div>
      <div class="custom-select row">
        <%= f.label :category, "category", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.select :category, [['general'], ['education'], ['sports'], ['history'], ['science']] %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :private, "Private Wiki?", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.radio_button :private, true %> Only for me!
          <br />
          <%= f.radio_button :private, false %> Share the knowledge!
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-8 col-md-offset-4">
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
        </div>
      </div>
    </div>
 <% end %>
 <div class="form-group row">
   <div class="col-md-8 col-md-offset-4">
     <%= button_to "Add Collaborator", new_wiki_collaborator_path(@wiki), class: "btn btn-primary", method: :get %>
   </div>
 </div>
